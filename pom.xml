        <maven.findbugsplugin.version>3.0.2</maven.findbugsplugin.version>

        <!--3rd party related properties-->
        <equinox.osgi.version>3.10.2.v20150203-1939</equinox.osgi.version>
        <equinox.osgi.services.version>3.4.0.v20140312-2051</equinox.osgi.services.version>
        <slf4j.version>1.7.5</slf4j.version>
        <osgi.api.version>6.0.0</osgi.api.version>
        <osgi.framework.import.version.range>[1.8.0, 2.0.0)</osgi.framework.import.version.range>
        <guava.version>19.0</guava.version>
        <guava.bundle.version>19.0.0</guava.bundle.version>
        <commons-cli.wso2.version>1.2.0.wso2v1</commons-cli.wso2.version>
        <libthrift.version>0.9.2.wso2v1</libthrift.version>
        <commons.lang.wso2.version>2.6.0.wso2v1</commons.lang.wso2.version>
        <disruptor.wso2.version>3.3.2.wso2v2</disruptor.wso2.version>
        <commons-digester.wso2.version>1.8.1.wso2v1</commons-digester.wso2.version>
        <commons-beanutils.wso2.version>1.8.0.wso2v1</commons-beanutils.wso2.version>
        <orbit.version.commons.collection>3.2.0.wso2v1</orbit.version.commons.collection>
        <org.apache.commons.lang.package.import.version.range>[2.6.0, 3.0.0)</org.apache.commons.lang.package.import.version.range>

        <!--Test related properties-->
        <org.jacoco.ant.version>0.7.5.201505241946</org.jacoco.ant.version>
        <maven.paxexam.plugin.version>1.2.4</maven.paxexam.plugin.version>

        <!--Carbon related properties-->
        <carbon.feature.plugin.version>2.0.0</carbon.feature.plugin.version>
        <carbon.kernel.version>5.0.0</carbon.kernel.version>
        <carbon.kernel.package.import.version.range>[5.0.0, 6.0.0)</carbon.kernel.package.import.version.range>
        <carbon.hazelcast.version>1.0.0-SNAPSHOT</carbon.hazelcast.version>
        <carbon.hazelcast.feature.version>1.0.0</carbon.hazelcast.feature.version>
        <carbon.hazelcast.package.import.version.range>[1.0.0, 2.0.0)</carbon.hazelcast.package.import.version.range>
        <carbon.jndi.version>1.0.0-SNAPSHOT</carbon.jndi.version>
        <carbon.datasources.version>1.0.0-SNAPSHOT</carbon.datasources.version>
