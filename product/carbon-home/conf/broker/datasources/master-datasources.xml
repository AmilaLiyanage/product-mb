<datasources-configuration>

    <providers>
        <provider>org.wso2.carbon.datasource.rdbms.hikari.HikariDataSourceReader</provider>
        <!--<provider>org.wso2.carbon.datasource.rdbms.tomcat.TomcatDataSourceReader</provider>-->
    </providers>

    <datasources>

        <!-- WSO2 MB embedded H2 Store     -->
        <datasource>
            <name>WSO2_MB_STORE_DB</name>
            <description>The datasource used for message broker database</description>
            <jndiConfig>
                <name>WSO2MBStoreDB</name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <url>jdbc:h2:./database/WSO2MB_DB;DB_CLOSE_ON_EXIT=FALSE;LOCK_TIMEOUT=60000;INIT=runscript from
                        'dbscripts/mb-store/h2-mb.sql'</url>
                    <username>wso2carbon</username>
                    <password>wso2carbon</password>
                    <driverClassName>org.h2.Driver</driverClassName>
                    <connectionTimeout>30000</connectionTimeout>
                    <idleTimeout>600000</idleTimeout>
                    <maxLifetime>1800000</maxLifetime>
                    <maximumPoolSize>10</maximumPoolSize>
                    <minimumIdle>10</minimumIdle>
                    <autoCommit>false</autoCommit>
                </configuration>
            </definition>
        </datasource>

